upstream worldbank {
	server api.worldbank.org;
	keepalive 30;
}

upstream restcountries {
	server restcountries.eu;
	keepalive 10;
}

upstream aqicn {
	server api.waqi.info;
	keepalive 10;
}

server {
	listen 80 default_server;
	listen [::]:80 default_server;

	# SSL configuration
	listen 443 ssl default_server;
	listen [::]:443 ssl default_server;
	# Self signed certs generated by the ssl-cert package
	include snippets/snakeoil.conf;

	root /var/www/html;
	index index.html index.htm index.nginx-debian.html;

	server_name _;

	# Enable caching to the zone called "one"
	proxy_cache one;

	location / {
		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		try_files $uri $uri/ =404;
	}

	location /worldbank/ {
		#Worldbank cache refreshes once a month
		proxy_cache_valid any 30d;
		proxy_http_version 1.1;
		proxy_pass_request_headers on;
		proxy_set_header Host api.worldbank.org;
		proxy_pass http://worldbank/;
	}

	location /restcountries/ {
		#RestCountries cache refreshes once a month too
		proxy_cache_valid any 30d;
		proxy_http_version 1.1;
		proxy_pass_request_headers on;
		proxy_set_header Host restcountries.eu;
		proxy_pass http://restcountries/;
	}

	location /aqicn/ {
		#AQICN cache refreshes every day, since pollution data
		#changes very often
		proxy_cache_valid any 24h;
		proxy_http_version 1.1;
		proxy_pass_request_headers on;
		proxy_set_header Host api.waqi.info;
		proxy_pass http://aqicn/;
	}
}
